{
  "name": "griot-node",
  "version": "1.0.0",
  "private": true,
  "description": "Complete AI agent framework for building sophisticated agent systems",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:schemas && npm run build:service-connectors && npm run build:data",
    "build:core": "cd packages/core && npm run build",
    "build:schemas": "cd packages/schemas && npm run build",
    "build:service-connectors": "cd packages/service-connectors && npm run build",
    "build:data": "cd packages/data && npm run build",
    "build:bridge": "cd apps/persona-rag-bridge && npm run build",
    "test": "for f in tests/scripts/*.js; do echo Running $f; node $f || exit 1; done",
    "test:integration": "jest tests/integration/ --config jest.config.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "clean": "npm run clean:core && npm run clean:schemas && npm run clean:service-connectors && npm run clean:data",
    "clean:core": "cd packages/core && npm run clean",
    "clean:schemas": "cd packages/schemas && npm run clean",
    "clean:service-connectors": "cd packages/service-connectors && npm run clean",
    "clean:data": "cd packages/data && npm run clean",
    "migrate-personas": "tsx scripts/migrate-personas-to-db.ts"
  },
  "keywords": [
    "ai",
    "agents",
    "framework",
    "automation",
    "messaging",
    "microservices",
    "typescript"
  ],
  "author": "Griot Framework Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "express": "^4.19.2",
    "fastify": "^4.25.2",
    "inquirer": "^9.2.12",
    "jose": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.0.0",
    "nanoid": "^5.0.4",
    "neo4j-driver": "^5.28.1",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "weaviate-ts-client": "^2.2.0",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.10",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.35.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/griot-framework/griot-node.git"
  },
  "bugs": {
    "url": "https://github.com/griot-framework/griot-node/issues"
  },
  "homepage": "https://griot.dev"
}
